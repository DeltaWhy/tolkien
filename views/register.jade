extends layout

block content
  .container
    .row
      .col-12.col-md-10.col-md-offset-1.col-lg-8.col-lg-offset-2
        .jumbotron(style='margin-top: 4em')
          h1.text-center Register
          img.img-thumbnail.img-responsive.center-block(width='20%', src='/images/logo.png', alt='Logo', style='margin-bottom: 1em')
          form.clearfix(method='POST', action='/register')
            .form-group
              label(for='username') Username
              input#username.form-control.input-lg(type='text', name='username', placeholder='Username', value=user.username)
            .form-group
              label(for='name') Real name
              input#name.form-control.input-lg(type='text', name='name', placeholder='Real name', value=user.name)
            .form-group
              label(for='email') Email
              input#email.form-control.input-lg(type='email', name='email', placeholder='Email', value=user.email)
            .form-group
              label(for='password') Password
              input#password.form-control.input-lg(type='password', name='password', placeholder='Password')
            .form-group
              label(for='confirm-password') Confirm password
              input#confirm-password.form-control.input-lg(type='password', name='confirm-password', placeholder='Confirm password')
            button.btn.btn-success.btn-lg.pull-right(type='submit') Register
            div
              a(href='/') Already have an account?
  script.
    document.forms[0][0].focus();
